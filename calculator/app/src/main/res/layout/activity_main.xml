<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="409dp"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/Clear"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="@string/clear"
                android:textColor="#F45B00"
                android:textSize="24sp"/>

            <Button
                android:id="@+id/Clear_EntryBTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clear_entry"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textColor="#F45B00"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@drawable/button"
                android:textSize="24sp"/>

            <Button
                android:id="@+id/ParBTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/parentheses"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textColor="#F45B00"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@drawable/button"
                android:textSize="24sp"/>

            <Button
                android:id="@+id/DivBTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Div"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textColor="#F45B00"
                android:background="@drawable/button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textSize="24sp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button8"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:onClick="SevenBTN"
                android:text="@string/Seven"
                android:textColor="#F45B00"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button9"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:onClick="EightBTN"
                android:text="@string/Eight"
                android:textColor="#F45B00"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button7"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:onClick="NineBTN"
                android:text="@string/Nine"
                android:textColor="#F45B00"
                android:textSize="24sp" />

            <Button
                android:id="@+id/MultiBTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Multi"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textColor="#F45B00"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textSize="24sp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/Four"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:onClick="FourBTN"
                android:text="@string/Four"
                android:textColor="#F45B00"
                android:textSize="24sp" />

            <Button
                android:id="@+id/Five"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:onClick="FiveBTN"
                android:text="@string/Five"
                android:textColor="#F45B00"
                android:textSize="24sp" />

            <Button
                android:id="@+id/Six"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:onClick="SixBTN"
                android:text="@string/Six"
                android:textColor="#F45B00"
                android:textSize="24sp" />

            <Button
                android:id="@+id/MinusBTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Minus"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textColor="#F45B00"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textSize="24sp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/One"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:onClick="OneBTN"
                android:text="@string/One"
                android:textColor="#F45B00"
                android:textSize="24sp" />

            <Button
                android:id="@+id/Two"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:onClick="TwoBTN"
                android:text="@string/Two"
                android:textColor="#F45B00"
                android:textSize="24sp" />

            <Button
                android:id="@+id/Three"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:onClick="ThreeBTN"
                android:text="@string/Three"
                android:textColor="#F45B00"
                android:textSize="24sp" />

            <Button
                android:id="@+id/PlusBTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Plus"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textColor="#F45B00"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textSize="24sp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plusMinusBTN"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textColor="#F45B00"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textSize="24sp"/>

            <Button
                android:id="@+id/Zero"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:onClick="ZeroBTN"
                android:text="@string/Zero"
                android:textColor="#F45B00"
                android:textSize="24sp" />

            <Button
                android:id="@+id/Point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Point"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textColor="#F45B00"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textSize="24sp"/>

            <Button
                android:id="@+id/Equal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Equal"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textColor="#F45B00"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textSize="24sp"/>
        </TableRow>
    </TableLayout>
    <TextView
        android:id="@+id/input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/display"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/input"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input"
        app:layout_constraintVertical_bias="0.0"
        android:importantForAutofill="no" />

    <ImageButton
        android:id="@+id/back_space"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:background="@drawable/button"
        android:contentDescription="@string/backspace"
        android:onClick="BackspaceBTN"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_backspace1_foreground"
        tools:ignore="ImageContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>